\DeclareMathOperator{\corsym}{Cor}
\newcommand\COR[1]{\corsym\left\langle#1\right\rangle}
\DeclareMathOperator{\covsym}{Cov}
\newcommand\COV[1]{\covsym\left\langle#1\right\rangle}
\DeclareMathOperator{\sesym}{SE}
